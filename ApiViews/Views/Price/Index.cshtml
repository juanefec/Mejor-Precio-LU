@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
  <h2>Precios</h2>
    <a asp-controller="Price" asp-action="Create" class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Nuevo 
    </a> 
  <div class="table-responsive">
  <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div id="imaginary_container"> 
                <div class="input-group stylish-input-group input-append">
                    <input type="text" id="searchForTable" class="form-control"  placeholder="Search" >
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>  
                    </span>
                </div>
            </div>
        </div>
	</div>            
  <table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Tienda</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Modificar</th>
        </tr>
    </thead>
    <tbody id="tableBody">
      @foreach(var item in @Model.PriceDataList)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Store.Name</td>
                <td>@item.Cost</td>
                <td>@item.Report</td>
                <td>@item.Date</td>
                <td><a class="btn btn-warning" asp-area="" asp-controller="Price" asp-action="Update" asp-route-id="@item.Id">Modificar</a></td>
            </tr>
        }
    </tbody>
  </table>
  </div>
</div>
   