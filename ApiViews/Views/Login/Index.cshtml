
@model ApiViews.Models.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

        
<div class="form-gap"></div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Bienvenido a los Mejores Precios!</h2>
                  <p>Por favor ingrese su cuenta.</p>
                  <div class="panel-body">
    
                    <form id="register-form" role="form" autocomplete="off" class="form" method="post">
    
                      <div class="form-group">
                        <div class="w-100 p-3">
                          @if (!ViewData.ModelState.IsValid) {
                            <div class="error" style="color: red">Email o contrasenia incorrectos</div>
                          }
                          <input id="email" name="email" placeholder="Email Address" class="form-control"  type="email"value="@Model.Email">
                          </br>
                          <input type="password" id="password" name="password" class="form-control input-sm chat-input" placeholder="Password" />
                          </br>
                        </div>
                      </div>
                      <div class="wrapper">
                        <span class="group-btn">     
                          <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block"/>
                          </br>
                          <a class="btn btn-lg btn-secondary btn-block" asp-area="" asp-controller="Login" asp-action="PasswordRecovery">Olvido su contrase√±a?</a>
                        </span>
                      </div>
                      
                      <input type="hidden" class="hide" name="token" id="token" value=""> 
                    </form>
    
                  </div>
                </div>
              </div>
            </div>
          </div>
	</div>
</div>